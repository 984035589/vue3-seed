{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"typeRoots": ["node_modules/@types"],
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["element-plus/global", "lodash"]
	},
	"include": ["vite.config.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "types/*.d.ts", "types/*.ts"],
	"exclude": ["node_modules", "dist"]
}
